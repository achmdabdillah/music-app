{{>head}}
{{>navbar}}

<div class="container text center pt-5">
  <form action="/songs/edit/{{music.music_id}}" method="POST" enctype="multipart/form-data">
  <input type="hidden" name="music_id" value="{{music.music_id}}">
  <input type="hidden" name="oldImage" value="{{music.cover_music}}">
    <div class="input-group mb-3">
      <span class="input-group-text" id="inputGroup-sizing-default">Title</span>
      <input type="text" name="title" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" value="{{music.title}}">
    </div>
      <div class="mb-3">
        <label for="formFile" class="form-label">Music cover <img src="/static/icons/disc.svg" alt=""></label>
        <input class="form-control" name="cover_music" type="file" id="formFile">
      </div>
      <div class="text-center">
        <button class="btn btn-success mt-3 px-5 py-2" type="submit">Submit</button>
      </div>
  </form>
</div>